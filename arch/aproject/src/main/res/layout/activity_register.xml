<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/color_white">

            <com.vero.common.ui.view.IconFontTextView
                android:id="@+id/action_back"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:gravity="center"
                android:text="@string/if_back"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/title_register"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_d1d2" />

        <com.vero.common.ui.view.InputItemLayout
            android:id="@+id/input_item_orderId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dp_16"
            app:inputType="number"
            app:bottomLineAppearance="@style/leftMargin_lineAppearance"
            app:hint="@string/input_item_hint_order_id"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:title="@string/input_item_title_curse_order_id"
            app:titleTextAppearance="@style/titleTextAppearance"
            app:topLineAppearance="@style/lineAppearance"/>

        <com.vero.common.ui.view.InputItemLayout
            android:id="@+id/input_item_moocId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dp_16"
            app:bottomLineAppearance="@style/leftMargin_lineAppearance"
            app:hint="请输入慕课网用户ID"
            app:inputType="number"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:title="慕课网ID"
            app:titleTextAppearance="@style/titleTextAppearance"/>

        <com.vero.common.ui.view.InputItemLayout
            android:id="@+id/input_item_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dp_16"
            app:bottomLineAppearance="@style/leftMargin_lineAppearance"
            app:hint="@string/input_item_hint_user_name"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:title="@string/input_item_user_name"
            app:titleTextAppearance="@style/titleTextAppearance"/>

        <com.vero.common.ui.view.InputItemLayout
            android:id="@+id/input_item_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dp_16"
            app:bottomLineAppearance="@style/leftMargin_lineAppearance"
            app:hint="@string/input_item_hint_password"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:title="@string/input_item_password"
            app:inputType="password"
            app:titleTextAppearance="@style/titleTextAppearance"/>

        <com.vero.common.ui.view.InputItemLayout
            android:id="@+id/input_item_password_check"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dp_16"
            app:bottomLineAppearance="@style/lineAppearance"
            app:hint="请再次输入密码"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:title="确认密码"
            app:inputType="password"
            app:titleTextAppearance="@style/titleTextAppearance"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/action_submit"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:backgroundTint="@color/color_dd2"
            android:text="@string/action_submit"
            android:textSize="@dimen/sp_16"
            app:cornerRadius="@dimen/dp_6"
            />
    </LinearLayout>
</layout>