<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">


        <Button
            android:id="@+id/to_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/to_tab_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="tab_top"
            app:layout_constraintEnd_toEndOf="@+id/to_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/to_tab"
            app:layout_constraintTop_toBottomOf="@+id/to_tab" />

        <Button
            android:id="@+id/to_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="to_refresh"
            app:layout_constraintEnd_toEndOf="@+id/to_tab_top"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/to_tab_top"
            app:layout_constraintTop_toBottomOf="@+id/to_tab_top" />

        <Button
            android:id="@+id/to_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="to_banner"
            app:layout_constraintEnd_toEndOf="@+id/to_tab_top"
            app:layout_constraintHorizontal_bias="0.416"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/to_tab_top"
            app:layout_constraintTop_toBottomOf="@+id/to_refresh" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>